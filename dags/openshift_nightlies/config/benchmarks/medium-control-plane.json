{
    "benchmarks": [
        {
            "name": "scale-6",
            "workload": "scale-perf",
            "command": "./run_scale_fromgit.sh",
            "env": {
                "SCALE": "6",
                "METADATA_COLLECTION": "true",
                "WORKLOAD_NODE_ROLE": "worker"
            }
        },
        {
            "name": "node-density",
            "workload": "kube-burner-ocp-wrapper",
            "command": "./run.sh",
            "env": {
                "ES_SERVER": "",
                "WORKLOAD": "node-density",
                "EXTRA_FLAGS": "--pod-ready-threshold=60s --timeout=2h"
            }
        },
        {
            "name": "cluster-density-v2",
            "workload": "kube-burner-ocp-wrapper",
            "command": "./run.sh",
            "env": {
                "ES_SERVER": "",
                "WORKLOAD": "cluster-density-v2",
                "ITERATIONS": "90",
                "CHURN": "true",
                "EXTRA_FLAGS": "--timeout=3h --churn-duration=20m"
            }
        },
        {
            "name": "node-density-heavy",
            "workload": "kube-burner-ocp-wrapper",
            "command": "./run.sh",
            "env": {
                "ES_SERVER": "",
                "QPS": "20",
                "BURST": "20",
                "WORKLOAD": "node-density-heavy",
                "EXTRA_FLAGS": "--timeout=2h --pods-per-node=200"
            }
        },
        {
            "name": "node-density-cni",
            "workload": "kube-burner-ocp-wrapper",
            "command": "./run.sh",
            "env": {
                "ES_SERVER": "",
                "QPS": "20",
                "BURST": "20",
                "WORKLOAD": "node-density-cni",
                "EXTRA_FLAGS": "--timeout=2h --pods-per-node=200"
            }
        }
    ]
}
